<?xml version="1.0" encoding="utf-8"?>
<!-- UFO Galaxy - Dynamic Island Style Floating Window -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Minimized State - Dynamic Island -->
    <androidx.cardview.widget.CardView
        android:id="@+id/floating_minimized"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/island_bg"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Status Indicator -->
            <View
                android:id="@+id/status_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_dot"
                android:backgroundTint="@color/status_online" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Minimized Text -->
            <TextView
                android:id="@+id/minimized_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UFO³"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.1" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Activity Indicator -->
            <ProgressBar
                android:id="@+id/activity_indicator"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:indeterminateTint="@color/accent_blue"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Expanded State - Full Interface -->
    <androidx.cardview.widget.CardView
        android:id="@+id/floating_expanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/floating_bg"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <View
                    android:id="@+id/status_dot_expanded"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/status_dot"
                    android:backgroundTint="@color/status_online" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="UFO³ GALAXY"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.05" />

                <ImageButton
                    android:id="@+id/btn_minimize"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="@color/text_secondary"
                    android:contentDescription="Minimize" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/glass_border"
                android:layout_marginBottom="12dp" />

            <!-- Voice Input Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_voice_input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/glass_bg"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:tint="@color/accent_blue" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Voice Command"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Text Input -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/glass_bg"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/input_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Type command..."
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_tertiary"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:imeOptions="actionSend" />

                    <ImageButton
                        android:id="@+id/btn_send"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_send"
                        android:tint="@color/accent_blue"
                        android:contentDescription="Send" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/stat_nodes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="107"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NODES"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/stat_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/status_online"
                        android:textSize="20sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTIVE"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/stat_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/accent_blue"
                        android:textSize="20sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HEALTH"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
